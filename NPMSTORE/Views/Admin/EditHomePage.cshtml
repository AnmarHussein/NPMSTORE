<div class="edit-users mt-5">
    <div class="container">
        <div class="edit_information">
            <h3 class="text-center mb-3 mt-1 p-3">Edit Caption</h3>
            <form asp-action="EditHomePage" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
            @for (var i= 0;i<Model.caption.Count(); i++)
            {
                <input type="hidden" asp-for="caption[i].Id" value="@Model.caption[i].Id"/>
                <input type="hidden" asp-for="caption[i].HomeId" value="@Model.caption[i].HomeId" />
                
                    <div class="col-lg-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="caption[i].Name" class="control-label" >@(i+1) Caption</label>
                            <input asp-for="caption[i].Name" class="form-control" value="@Model.caption[i].Name"/>
