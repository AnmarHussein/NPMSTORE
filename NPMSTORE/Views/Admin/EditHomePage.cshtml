@model NPMSTORE.Models.HomeVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutDashbord.cshtml";
}

<div class="edit-users">
    <div class="container">
        <div class="edit_information">
            <form asp-action="EditHomePage" method="post" enctype="multipart/form-data">
                <h3 class="text-center mb-3 mt-1 p-3">Edit Header</h3>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="header.Id" />
                <input type="hidden" asp-for="header.HomeId" />
                <input type="hidden" asp-for="header.Logo" />
                <div class="row">
                    <div class="col-lg-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="header.Name" class="profile_details_text"></label>
                            <input asp-for="header.Name" class="form-control" />
                            <span asp-validation-for="header.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="header.ImageFile" class="profile_details_text"></label>
                            <input asp-for="header.ImageFile" class="form-control" />
                            <span asp-validation-for="header.ImageFile" class="text-danger"></span>
                        </div>
                    </div>
                </div> 
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 submit text-right ">
                        <div class="form-group">
                            <input type="submit" class="btn btn-success" value="Save">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

