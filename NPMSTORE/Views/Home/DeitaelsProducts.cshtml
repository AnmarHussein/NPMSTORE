@model NPMSTORE.Models.StoreCategoryVM
@{
    ViewData["Title"] = "Detailes Products";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}


<!--================Single Product Area =================-->
	<div class="product_image_area">
		<div class="container">
			<div class="row s_product_inner">
				<div class="col-lg-6">
					<div class="owl-carousel owl-theme s_Product_carousel">
						<div class="single-prd-item">
							<img class="img-fluid" src=@Url.Content("~/Images/"+@Model.product.Image) alt="">
						</div>
					</div>
				</div>
				<div class="col-lg-5 offset-lg-1">
					<div class="s_product_text">
						<h3>@Model.product.Name</h3>
						<h2>@Model.product.Price.ToString("c")</h2>
						<ul class="list">
							<li><a class="active" href="#"><span>Stote</span> : @Model.store.Name</a></li>
							<li><a class="active" href="#"><span>Category</span> : @Model.category.Name</a></li>
							<li><a href="#"><span>Availibility</span> : @((bool)Model.product.Stat ? "In Stock" : "Not Stock")</a></li>
						</ul>
						<p>
							@Model.product.Details
						</p>
						@if(Model.product.ProductAttributes.Count() > 0)
						{
							<div class="mt-3">
								@foreach(var attr in Model.product.ProductAttributes)
								{
									<span class="me-2 attr-products">@attr.Name : @attr.Describtion</span>
								}
							</div>
						}
					
						<hr />
						<div class="product_count">
						<label for="qty">Quantity:</label>
						<form asp-controller="Home" asp-action="addToCart" method="post">
                         <input type="hidden" name="id" value="@Model.product.Id">
							<input type="number" name="quantity"  size="2" maxlength="12" value="1" title="Quantity:" class="input-text qty">
							<br />
							<button type="submit" class="btn btn-primary" style="background: #384aeb;color:#fff;margin-top: 26px;" >Add to Cart</button>  
							</form>
							
						</div>
						
					</div>
				</div>
			</div>
		</div>
	</div>
<!--================End Single Product Area =================-->
