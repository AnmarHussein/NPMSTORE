@model IEnumerable<NPMSTORE.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDashbord.cshtml";
}

<!--[ Recent Users ] start-->
<div class="col-xl-12 col-md-6">
    <div class="card Recent-Users">
        <div class="card-header">
            <h5>Latest Orders</h5>
        </div>
        <div class="card-block px-0 py-0">
            <div class="table-responsive">
                <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Customer</th>
                                <th>Order Stat</th>
                                <th>Total Cost</th>
                                <th>Payment</th>
                                <th>Controller</th>
                            </tr>
                        </thead>
                    <tbody>
                        @foreach (var item in Model)
                        { 
                            <tr class="unread">
                            <td><h6 class="m-0">@item.Customer.FullName</h6></td>

                            <td>
                                <h6 class="m-0">
                                   @if (@item.OrderStat == 1)
                                    {
                                        <span class='text-c-green'>Compleate</span>
                                    }
                                    else
                                    {
                                        <span class='text-c-orange'>Waitting</span>
                                    }
                                </h6>
                            </td>
                             <td><h6 class="m-0">@item.TotalCost</h6></td>
                            <td>
                                <h6 class="m-0">
                                   @item.Payment.CardNumber
                                </h6>
                            </td>
                                <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="linkControle lable theme-bg2 text-white f-12 "><i class="fa fa-edit"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="linkControle lable theme-bg text-white f-12 "><i class="	fa fa-eye" aria-hidden="true"></i></a>  
                                <form asp-action="Delete" class="d-inline">
                                    <input type="hidden" asp-for="@item.Id" name="Id"/>
                                    <button type="submit" onclick="confirm(`Ary You Sure !`)"  class="linkControle lable bg-danger text-white f-12" style="border:none;"> 
                                        <i class="fa fa-trash-o" aria-hidden="true"></i> 
                                    </button>
                                </form> 
                                </td>
                        </tr>
                        }
                                                
                    </tbody>
                </table>
                <div class="d-flex justify-content-end">
                    <a asp-action="Create" class="btn btn-primary theme-bg2 text-white">Create</a>
                </div>
            </div>
        </div>
    </div>
</div>
