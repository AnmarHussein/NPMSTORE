@model NPMSTORE.Models.Order

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutDashbord.cshtml";
}


<div class="edit-users">
    <div class="container">
        <div class="edit_information">
            <form asp-action="Create" method="POST">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3 class="text-center mb-3 mt-1 p-3">Create Orders</h3>
                <div class="row">
                    <div class="col-lg-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="TotalCost" class="profile_details_text"></label>
                            <input asp-for="TotalCost" class="form-control" />
                            <span asp-validation-for="TotalCost" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="OrderStat" class="profile_details_text"></label>
                            <input asp-for="OrderStat" class="form-control" />
                            <span asp-validation-for="OrderStat" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="Paymentid" class="profile_details_text"></label>
                            <select asp-for="Paymentid" class ="form-control" asp-items="ViewBag.Paymentid"></select>
                        </div>
                    </div>
                    <div class="col-lg-6 col-xs-12">
                        <div class="form-group">
                            <div class="form-group">
                                <label asp-for="Customerid" class="profile_details_text"></label>
                                <select asp-for="Customerid" class ="form-control" asp-items="ViewBag.Customerid"></select>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 submit text-right ">
                        <div class="form-group">
                            <input type="submit" class="btn btn-success" value="Submit">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

