@model NPMSTORE.Models.OrderProduct

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutDashbord.cshtml";
}


<div class="edit-users">
    <div class="container">
        <div class="edit_information">
            <form asp-controller="Orders" asp-action="EditProducts" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3 class="text-center mb-3 mt-1 p-3">Edit Product In Orders</h3>
                <input type="hidden" asp-for="Orderid" />
                <input type="hidden" asp-for="Productid" />
                <div class="row">
                    <div class="col-lg-12 col-xs-12">
                        <div class="form-group">
                            <label asp-for="Quantity" class="profile_details_text"></label>
                            <input asp-for="Quantity" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 submit text-right ">
                        <div class="form-group">
                            <input type="submit" class="btn btn-success" value="Submit">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


