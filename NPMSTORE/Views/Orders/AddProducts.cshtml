@model NPMSTORE.Models.OrderProduct

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutDashbord.cshtml";
}


<div class="edit-users">
    <div class="container">
        <div class="edit_information">
            <form asp-action="AddProducts">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3 class="text-center mb-3 mt-1 p-3">Add Product To Orders</h3>
                <div class="row">
                    <div class="col-lg-12 col-xs-12">
                        <div class="form-group">
                            <label asp-for="Quantity" class="profile_details_text"></label>
                            <input asp-for="Quantity" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="Orderid" class="profile_details_text"></label>
                            <select asp-for="Orderid" class ="form-control" asp-items="ViewBag.Orderid"></select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="Productid" class="control-label"></label>
                            <select asp-for="Productid" class ="form-control" asp-items="ViewBag.Productid"></select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 submit text-right ">
                        <div class="form-group">
                            <input type="submit" class="btn btn-success" value="Submit">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


