@model NPMSTORE.Models.StoreCategory

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutDashbord.cshtml";}
<!--[ Recent Users ] start-->
<div class="col-xl-12 col-md-6">
    <div class="card Recent-Users">
        <div class="card-header">
            <h5>Product 1</h5>
        </div>
        <div class="card-block px-0 py-0">
            <div class="row">
                <div class="col-md-6">
                    <img  src="~/assetsDashborde/images/widget/dashborad-3.png" class="w-100">
                </div>
                <div class="col-md-6">
                    <h3>@Model.Products.Name</h3>
                    <h5 class="text-c-green"> price : $ @Model.Products.Price  / @Model.Products.Seales</h5>
                    <h6>Stors Name : @Model.Store.Name</h6>
                    <h6>category Name : @Model.Category.Name</h6>
                    <h6>In Stock : @(@Model.Products.Stat == true ? "In Stok" :"Out Stok") </h6>
                    <hr/>
                    <p class="text-muted">detailes : @Model.Products.Details</p>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary text-white">Edit</a>
                <form asp-controller="Products" asp-action="Delete" > 
                    <input type="hidden" asp-for="Products.Id" name="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>


<!--[ Recent Users ] start-->
<div class="col-xl-12 col-md-6">
    <div class="card Recent-Users">
        <div class="card-header">
            <h5>Latest Attribute Products</h5>
        </div>
        <div class="card-block px-0 py-0">
            <div class="table-responsive">
                <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Attribute Name</th>
                                <th>Attribute Describtion</th>
                                <th>Controller</th>
                            </tr>
                        </thead>
                    <tbody>
                        @foreach (var item in Model.Products.ProductAttributes)
                        { 
                            <tr class="unread">
                            <td>
                                <h6 class="m-0">
                                    @item.Name
                                </h6>
                            </td>
                            <td>
                                <h6 class="m-0">
                                    @item.Describtion
                                </h6>
                            </td>
                            <td>
                                <a asp-action="EditAttr" asp-route-id="@item.Id" class="linkControle lable theme-bg2 text-white f-12 "><i class="fa fa-edit"></i></a>
                                <form asp-action="DeleteAttr" asp-route-id="@item.Id" class="d-inline ml-1"> 
                                <input type="hidden" asp-for="@item.Id" name="Id"/>
                                <button type="submit" onclick="confirm(`Ary You Sure !`)"  class="linkControle lable bg-danger text-white f-12" style="border:none;"> 
                                    <i class="fa fa-trash-o" aria-hidden="true"></i> 
                                </button>
                                </form>                            
                            </td>
                        </tr>
                        }
                                                
                    </tbody>
                </table>
                <div class="d-flex justify-content-end">
                    <a asp-action="AddAttr" asp-route-id="@Model.Products.Id" class="btn btn-primary theme-bg2 text-white">Create Attrubite</a>
                </div>
            </div>
        </div>
    </div>
</div>
