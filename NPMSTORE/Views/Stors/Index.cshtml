@model IEnumerable<NPMSTORE.Models.ProductsVM> 

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDashbord.cshtml";
    decimal total = 0;
}
    <!--[ Recent Users ] start-->
<div class="col-xl-12 col-md-6">
    <div class="card Recent-Users">
        <div class="card-header">
            <h5>Latest Stors</h5>
        </div>
        <div class="card-block px-0 py-0">
            <div class="table-responsive">
                <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name Stors</th>
                                <th class="d-none d-md-table-cell">Total Products</th>
                                <th class="d-none d-md-table-cell">Total Seales</th>
                                <th>Controller</th>
                                <th class="text-right"></th> 
                            </tr>
                        </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {                                          
                            <tr>
                            <td>
                                <h6 class="m-0">
                                    <img class="rounded-circle  m-r-10" style="width:40px;height: 40px;"  src=@Url.Content("~/Images/" + @item.ImgStore) alt="activity-user">@item.NameStore
                                </h6>
                            </td>
                            <td class="d-none d-md-table-cell">
                                <h6 class="m-0"> @item.productlist.Count</h6>
                            </td>
                            <td class="d-none d-md-table-cell">
                                <h6 class="m-0 text-c-green">
                                    @if(item.productlist.Count() > 0)
                                    @foreach (var prod in @item.productlist)
                                    {
                                        total = total+ (decimal)prod.Price * (decimal)prod.Seales;        
                                    }
                                    $ @total
                                    @{total = 0;}
                                </h6>
                            </td>                  
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.IdStoe" class="linkControle lable theme-bg text-white f-12 "><i class="fa fa-edit"></i></a>
                                <a asp-action="Details" asp-route-id="@item.IdStoe" class="linkControle lable theme-bg2 text-white f-12 "><i class="	fa fa-eye" aria-hidden="true"></i></a>
                                <a asp-action="Details" asp-route-id="@item.IdStoe" class="linkControle lable bg-danger text-white f-12 "><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                        }  
                    </tbody>
                </table>
            </div>
            <div class="d-flex justify-content-end">
                <a asp-action="Create"  class="btn btn-primary text-white">Craete</a>
            </div>
                                    
        </div>
    </div>
</div>
